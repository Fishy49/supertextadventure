<p id="notice"><%= notice %></p>

<h1>Characters</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Race</th>
      <th>Character Type</th>
      <th>Current Game</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% if @characters.present? %>
      <% @characters.each do |character| %>
        <tr>
          <td><%= character.name %></td>
          <td><%= character.race %></td>
          <td>Beta</td>
          <td>Nah</td>
          <td><%= link_to 'Show', character %></td>
          <td><%= link_to 'Edit', edit_character_path(character) %></td>
          <td><%= link_to 'Destroy', character, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    <% else %>
      <tr>
        <td colspan="7" class="has-text-centered">-- No Characters. <%= link_to 'Just Create One, Dullard', new_character_path %> --</td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

