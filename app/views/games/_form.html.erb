  </div>

  <div>
    <%= form.label :status, style: "display: block" %>
    <%= form.text_field :status %>
  </div>

  <div>
    <%= form.label :opened_at, style: "display: block" %>
    <%= form.datetime_field :opened_at %>
  </div>

  <div>
    <%= form.label :closed_at, style: "display: block" %>
    <%= form.datetime_field :closed_at %>
  </div>

