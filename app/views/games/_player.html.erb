<li id="<%= dom_id game_user %>" data-controller="game-user">
	<%= game_user.character_name %>
	<% if game_user.game.enable_hp? %>
		<span class="font-medium text-sm">(<%= game_user.current_health %>/<%= game_user.max_health %>)</span>
		<% if game_user.game.host?(current_user) %>
			<%= form_with(model: game_user, url: game_user_update_health_path(game_id: game_user.id), method: :patch, class: "hidden", data: { "turbo-frame": "player", "game-user-target": "healthForm" }) do |form| %>
			  <div class="form-group">
			    <%= form.label :heal, style: "display: block" %>
			    <%= form.text_field :heal %>
			  </div>

			  <div class="form-group">
			    <%= form.label :damage, style: "display: block" %>
			    <%= form.text_field :damage %>
			  </div>

			  <div>
			    <%= form.submit class: "button" %>
			  </div>
			<% end %>
		<% end %>
	<% end %>
</li>
