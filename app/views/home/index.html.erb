<div class="columns home">
  <div class="column is-half is-offset-one-quarter">
    
    <%= render "knight" %>
    
    <div class="has-text-centered">
      <% if logged_in? %>
        <p>Logged in as <span class="has-text-weight-bold"><%= current_user.username %></span>.</p>
        <p class="mt-3">
          <%= link_to games_path, class: "button" do %>
            <span>Get to Adventuring</span>
            <span class="has-text-weight-bold is-size-4">-></span>
          <% end %>
          
        </p>
        <p class="mt-5"><%= link_to "Log Out", logout_path %></p>
      <% else %>
        <%= render "/sessions/form" %>
      <% end %>

      <p id="notice"><%= notice %></p>
    </div>
  </div>
</div>
