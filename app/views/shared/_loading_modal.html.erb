	<div class="fixed inset-0 bg-stone-800 bg-opacity-25 transition-opacity"></div>

  <div class="fixed inset-0 z-10 overflow-y-auto">
    <div class="flex min-h-full items-end justify-center p-4 text-center sm:items-center sm:p-0">
      <div class="relative transform overflow-hidden bg-stone-900 text-left shadow-[-20px_25px_0px_0px_#000000] transition-all sm:my-8 sm:w-full sm:max-w-sm border-terminal-green border-dashed border-2">
        <div class="bg-stone-900 px-2 py-3">
          <div class="mt-3 text-center sm:mt-0 sm:ml-4">
            <h3 class="text-lg text-center font-medium leading-6 text-terminal-green" ><%= loading_message %><div class="animate-spin inline-block ml-3">|</div></h3>
          </div>
        </div>
      </div>
    </div>
  </div>
