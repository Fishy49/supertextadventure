<%= form_with(model: user) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "ERROR") %>:</h2>

      <ul>
        <% user.errors.each do |error| %>
          <li><%= error.full_message.upcase %></li>
        <% end %>
      </ul>
    </div>
    <hr>
  <% end %>

  <div class="field">
    <%= form.label :username %>
    <%= form.text_field :username %>
  </div>

  <div class="field">
    <%= form.label :password %>
    <%= form.password_field :password %>
  </div>

  <div class="field">
    <%= form.label :confirm %>
    <%= form.password_field :password_confirmation %>
  </div>

  <div class="actions">
    <%= form.submit "Register", class: "button" %>
  </div>
<% end %>
